<UserControl x:Class="SportShop.Views.ProductPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SportShop.Views"
             xmlns:viewmodels="clr-namespace:SportShop.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:ProductViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="720"
             d:DesignWidth="1280"
             Background="White">
    <StackPanel>
        <TextBlock
            Text="{Binding Testak, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock
            Text="{Binding Test, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</UserControl>
